<odoo>
    <record id="view_gearguard_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_maintenance" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="maintenance_count" widget="statinfo" string="Maintenance"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="serial_number"/>
                            <field name="location"/>
                            <field name="maintenance_team_id"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="employee_id"/>
                            <field name="warranty_date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_gearguard_equipment" model="ir.actions.act_window">
        <field name="name">Equipments</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_gearguard_root" name="GearGuard"/>
    <menuitem id="menu_gearguard_equipment" name="Equipments" parent="menu_gearguard_root" action="action_gearguard_equipment"/>
</odoo>