<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Form View -->
    <record id="view_gearguard_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Smart Button -->
                        <button name="action_view_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="request_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name"/>
                        </h1>
                        <h3>
                            <field name="serial_number" placeholder="Serial Number"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="maintenance_team_id"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                        </group>
                        <group string="Warranty Info">
                            <field name="purchase_date"/>
                            <field name="warranty_date"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Equipment Tree View -->
    <record id="view_gearguard_equipment_tree" model="ir.ui.view">
        <field name="name">gearguard.equipment.tree</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category"/>
                <field name="maintenance_team_id"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Action -->
    <record id="action_gearguard_equipment" model="ir.actions.act_window">
        <field name="name">Equipments</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first equipment
            </p>
        </field>
    </record>
</odoo>
