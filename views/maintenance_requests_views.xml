<odoo>
    <record id="view_gearguard_request_kanban" model="ir.ui.view">
        <field name="name">gearguard.request.kanban</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" sample="1">
                <field name="stage_id"/>
                <field name="color"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_color_#{record.color.raw_value}">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <span class="text-muted"><field name="equipment_id"/></span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="maintenance_type"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/> </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_gearguard_request_calendar" model="ir.ui.view">
        <field name="name">gearguard.request.calendar</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <calendar string="Maintenance" date_start="schedule_date" color="user_id" mode="month">
                <field name="name"/>
                <field name="equipment_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_gearguard_request_form" model="ir.ui.view">
        <field name="name">gearguard.request.form</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/> </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. Leaking Oil"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="team_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="maintenance_type"/>
                            <field name="schedule_date"/>
                            <field name="duration"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gearguard_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">gearguard.request</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
    </record>

    <menuitem id="menu_gearguard_request" name="Requests" parent="menu_gearguard_root" action="action_gearguard_request"/>
</odoo>